<!DOCTYPE html>
<html>
  <head>

    <% include ./partials/head.ejs %>

  </head>
  <body>

    <% include ./partials/navbar.ejs %>

      <!-- Page Content -->
      <main class="container">

        <% include ../static/partials/messages.ejs %>

        <!-- Jumbotron Header -->
        <header class="jumbotron my-4">
          <h1 class="display-3">WikiLabs</h1>
          <p class="lead">Create and share Markdown Wikis.</p>
          <% if(!currentUser) { %>
            <div class="text-center">
              <a href="/users/sign_up" class="btn btn-primary btn-lg">Sign up</a>
              <a href="/users/sign_in" class="btn btn-success btn-lg">Sign in</a>
            </div>
          <% } else if (currentUser) {%>
            <p class="lead text-primary">Welcome, <strong><%= currentUser.name %></strong></p>
          <% } %>
        </header>

        <!-- Page Features -->
        <section class="row">

          <section class="col">
            <p class="lead">Create as many public wikis as you want!</p>
          </section>

          <section class="col">
            <p class="lead">Create private wikis!</p>
          </section>


        </section>

      </main>

      <% include ./partials/baseScripts.ejs %>

    </body>
</html>
